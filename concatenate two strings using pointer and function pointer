#include <stdio.h>  
int cat(char name1[], char name2[])  
{  
    char *s1=name1;
    char *s2=name2;
    int i=0,j=0;
    while(name1[i]!='\0') 
    {
        s1++;
        i++;
    }
    while(name2[j]!='\0')  
    {     
        *s1=*s2;
        s1++;
        s2++;
        j++;
    } 
    // name1[i]='\0';  
    printf("After concatenation is done, the new concatenated string will be: %s", name1);  
    return 0;  
}
int main()
{
    char name1[20];
    char name2[20]; 
    printf("Enter name1: ");  
    scanf("%s",name1);  
    printf("Enter name2: ");  
    scanf("%s",name2);  
    int (*fptr)(char [], char[])=cat;
    fptr(name1,name2);
}

output:
Enter name1: raghu
Enter name2: sankar
After concatenation is done, the new concatenated string will be: raghusankar
