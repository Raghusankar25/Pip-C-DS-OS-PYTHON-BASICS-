
#include <stdio.h>

int main()
{
    int num;

    /* Input number from user */
    printf("Enter any number: ");
    scanf("%d", &num);

    /* If (num & 1) evaluates to 1 */
    (num & 1)?printf("LSB of %d is set (1).", num):printf("LSB of %d is unset (0).", num);

    return 0;
}
output:
Enter any number: 4
LSB of 4 is unset (0)
