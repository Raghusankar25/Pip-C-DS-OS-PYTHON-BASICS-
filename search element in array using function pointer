#include<stdio.h>
int found(int *ptr)
{
    int num,i,flag=0;
    printf("enter the num:");
    scanf("%d",&num);
    for(i=0;i<5;i++)
    {
        if(num==*(ptr+i))
        flag++;
    }
    (flag>0)?printf("array element is found"):printf("array element is not found");
}
int main()
{
    int arr[10]={10,20,30,40,50};
    int *ptr=arr;
    int i;
    // printf("enter the size of an array:");
    // scanf("%d",&n);
    // printf("enter the elements in an array:");
    // for(i=0;i<5;i++)
    // {
    //     scanf("%d",(ptr+i));
    // }
    printf("the array elements are:");
    for(i=0;i<5;i++)
    {
        printf("%d ",*(ptr+i));
    }
    printf("\n");
    int (*fptr)(int *)=found;
    fptr(ptr);
}

output:
the array elements are:10 20 30 40 50 
enter the num:50
array element is found
