#include <stdio.h>
void reverse(char *str1) {
int len, i;
char *start, *end, temp;
len = sizeof(str1)/sizeof(str1[0]);
start = str1;
end = str1;
for (i = 0; i < len - 1; i++)
  end++;
for (i = 0; i < len / 2; i++) {
  temp = *end;
  *end = *start;
  *start = temp;
  start++;
  end--;
}
printf(" Reverse String = %s", str1);
}
int main() {
char str1[100] = "tutorial";
printf(" Given String = %s\n", str1);
void (*fptr)(char *)=reverse;
fptr(str1);
return 0;
}

output:
 Given String = tutorial
 Reverse String = lairotut
