#include <stdio.h>  
void revstr(char str[])  
{  
    char *p=str;
    int i, len, temp;  
    len = sizeof(p)/sizeof(p[0]);   
    for (i = 0; i < len/2; i++)  
    {  
        temp = p[i];  
        p[i] = p[len - i - 1];  
        p[len - i - 1] = temp; 
    }  
    printf ("After reversing the string: %s", str);  
    
}  
      
    int main()  
    {  
        char str[50]; 
        printf (" Enter the string: ");  
        scanf("%s",str);  
        printf (" \n Before reversing the string: %s \n", str);  
        void (*fptr)(char [])=revstr;
        fptr(str);
    }  
